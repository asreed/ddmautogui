        <Grid Grid.Row="1" Panel.ZIndex="0">



            <Image Source="/resources/splash/cad-splash-5.png" Margin="308,-51,0,-36" Stretch="UniformToFill" />
            <!--<Image Source="/images/logos/brooks-logo.png" Margin="26,55,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="131"/>-->
            <!--<Label Content="DDM Automation Cell Manager" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,16,0,0" FontSize="22" Foreground="#FF0072BC"/>-->
            <!--<Label Content="Intended for Gen 1 Phase 1a (ENG TEST ONLY)" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,113,0,0" Foreground="#FF0072BC"/>-->
            <!--<Label Content="UI Version:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,129,0,0" Foreground="#FF0072BC"/>-->
            <!--<Label x:Name="splashVersionLabel" Content="(version info)" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,129,0,0" Foreground="#FF0072BC"/>-->

            <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="45,106,0,0">
                <Grid VerticalAlignment="Top" Width="220">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="90"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBox Grid.Row="0" Grid.Column="0" x:Name="splashIPTextBox" Text="192.168.0.1" Margin="0,4,4,4" Padding="3"/>
                    <Button Grid.Row="0" Grid.Column="1" x:Name="splashConnectBtn" Content="Connect" Margin="4,4,0,4" Click="splashConnectBtn_Click"/>

                    <Grid
                        x:Name="splashErrorBox" 
                        Margin="0,4,0,4"
                        Grid.Row="1" 
                        Grid.ColumnSpan="2">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Image 
                            Grid.Column="0"
                            Source="/resources/icons/warning.ico" 
                            Height="16" 
                            Margin="0,0,6,0" 
                            VerticalAlignment="Center"/>
                        <TextBlock 
                            Grid.Column="1"
                            x:Name="splashErrorLabel" 
                            Text="Connection error. Verify IP is correct and TCS is running." 
                            TextWrapping="Wrap" 
                            FontSize="10" 
                            Margin="0" 
                            Visibility="Visible" 
                            VerticalAlignment="Center"/>
                    </Grid>

                    <Button Grid.Row="2" 
                            Grid.ColumnSpan="2" 
                            x:Name="dispenseBtn" 
                            Click="DispenseBtn_Click" 
                            Height="80" 
                            Visibility="Visible"
                            Style="{DynamicResource HeroButton}" 
                            
                            Margin="0,4,0,4">
                        <StackPanel>
                            <!--<Image Grid.Column="0" Source="/images/icons/cad-disp-valve-2-white.png"/>-->
                            <Label Grid.Column="1" Content="Begin Dispense Process" />
                        </StackPanel>
                    </Button>
                    

                </Grid>
            </Grid>




        </Grid>

        
        


    </Grid>
