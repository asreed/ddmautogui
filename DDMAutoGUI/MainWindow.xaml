                                </GroupBox>
                                <Button Grid.Row="0" 
                                        Grid.Column="1" 
                                        x:Name="Con_ConnectBtn" 
                                        Content="Connect" 
                                        Click="Con_ConnectBtn_Click"
                                        Style="{StaticResource BlueButton}"/>
                            </StackPanel>
                        </Grid>
                    </Grid>

                </TabItem>
                <TabItem x:Name="DispTab" Header="Dispense" Tag="Resources/icons/tools.ico" Style="{StaticResource MainTab}" IsEnabled="False">

                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid Margin="6">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="500"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>


                            <Grid Grid.Row="1" Grid.Column="1">
                                <TabControl x:Name="dispTabControl" Grid.Row="1" SelectionChanged="MainWindowSingle_Disp_TabSelectionChanged">

                                    <TabItem Header="1: Select Motor">
                                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                                            <Grid x:Name="tabContainer1">

                                                <Grid>

                                                    <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Vertical">
                                                        <Expander Header="Simulate" Margin="0,6,0,6" Padding="3">
                                                            <Border Margin="0,0,0,0" Padding="6" Background="{StaticResource TextBoxBlueLight}" CornerRadius="6">
                                                                <StackPanel Orientation="Vertical">
                                                                    <CheckBox x:Name="Disp_Sim_SimChk" Content="Simulate"/>
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <TextBlock Text="Flow rate ID" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                                        <TextBox x:Name="Disp_Sim_FlowIDTxt" Width="60" Style="{StaticResource SmallTextBox}" Margin="0,0,8,0"/>
                                                                    </StackPanel>
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <TextBlock Text="Flow rate OD" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                                        <TextBox x:Name="Disp_Sim_FlowODTxt" Width="60" Style="{StaticResource SmallTextBox}" Margin="0,0,8,0"/>
                                                                    </StackPanel>
                                                                </StackPanel>
                                                            </Border>
                                                        </Expander>
                                                        <GroupBox Header="Motor Size">
                                                            <StackPanel Orientation="Vertical">
                                                                <RadioButton Content="DDM 57" GroupName="Disp_MotorSizeRdg" x:Name="Disp_Motor57"/>
                                                                <RadioButton Content="DDM 95" GroupName="Disp_MotorSizeRdg" x:Name="Disp_Motor95"/>
                                                                <RadioButton Content="DDM 116" GroupName="Disp_MotorSizeRdg" x:Name="Disp_Motor116"/>
                                                                <RadioButton Content="DDM 170" GroupName="Disp_MotorSizeRdg" x:Name="Disp_Motor170"/>
                                                                <RadioButton Content="DDM 170 Tall" GroupName="Disp_MotorSizeRdg" x:Name="Disp_Motor170Tall"/>
                                                            </StackPanel>
                                                        </GroupBox>
                                                        <GroupBox Header="Options" Visibility="Collapsed">
                                                            <StackPanel Orientation="Vertical">
                                                                <CheckBox Visibility="Collapsed" IsChecked="False" x:Name="Disp_SNPhotoChk" Content="Serial number photo" Padding="8"/>
                                                                <CheckBox IsChecked="False" x:Name="Disp_PrePhotoChk" Content="Pre-process photo" Padding="8"/>
                                                                <CheckBox Visibility="Collapsed" IsChecked="False" x:Name="Disp_MeasureRingChk" Content="Ring height measurement" Padding="8"/>
                                                                <CheckBox Visibility="Collapsed" IsChecked="False" x:Name="Disp_MeasureMagChk" Content="Magnet and concentrator height measurement" Padding="8"/>
                                                                <CheckBox IsChecked="True" x:Name="Disp_DispenseChk" Content="Dispense cyanoacrylate" Padding="8"/>
                                                                <CheckBox Visibility="Collapsed" IsChecked="False" x:Name="Disp_PostPhotoChk" Content="Post-process photo" Padding="8"/>
                                                                <CheckBox IsChecked="False" x:Name="Disp_AutoCalibChk" Content="Autocalibrate after dispense" Padding="8"/>
                                                            </StackPanel>
                                                        </GroupBox>
                                                        <Button 
                                                            x:Name="Disp_BeginBtn"
                                                            Content="Begin Dispense" 
                                                            Style="{DynamicResource BlueButton}" 
                                                            Click="Disp_BeginBtn_Click"/>
                                                    </StackPanel>

                                                </Grid>


                                            </Grid>
                                        </ScrollViewer>
                                    </TabItem>

                                    <TabItem Header="2: Monitor Process">
                                        <Grid x:Name="tabContainer2">

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="400"/>
                                                    <RowDefinition/>
                                                </Grid.RowDefinitions>

                                                <GroupBox Header="Process Log" Grid.Row="0">

                                                    <TextBox x:Name="Disp_LogTxt" 
                                                             Text="(no data)"
                                                             Style="{StaticResource MonoTextBox}"/>
                                                </GroupBox>
                                                <ProgressBar Grid.Row="1"
                                                             Margin="3"
                                                             Foreground="Black"
                                                             x:Name="Disp_ProcessPrg" 
                                                             Height="20" 
                                                             IsIndeterminate="False"
                                                             Value="50" />
                                            </Grid>



                                        </Grid>
                                    </TabItem>

                                    <TabItem Header="3. Review Results">
                                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                                            <Grid x:Name="tabContainer3">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="*"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <GroupBox Grid.Row="0" Header="Result">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="140"/>
                                                                <ColumnDefinition/>
                                                            </Grid.ColumnDefinitions>
                                                            <StackPanel Orientation="Vertical">
                                                                <Border x:Name="Disp_Res_PassBdr" Grid.Column="0" Visibility="Collapsed" Style="{StaticResource PassBorder}">
                                                                    <TextBlock Text="Pass" Foreground="White"/>
                                                                </Border>
                                                                <Border x:Name="Disp_Res_FailBdr" Grid.Column="0" Visibility="Visible" Style="{StaticResource FailBorder}">
                                                                    <TextBlock Text="Fail" Foreground="White"/>
                                                                </Border>
                                                            </StackPanel>
                                                            <TextBlock x:Name="Disp_Res_ResMessageTxb"
                                                                       Grid.Column="1"
                                                                       TextWrapping="Wrap"
                                                                       Foreground="Black"
                                                                       VerticalAlignment="Center"
                                                                       Text="-"/>
                                                        </Grid>
                                                    </GroupBox>
                                                    <GroupBox Grid.Row="2" Header="Result Details">
                                                        <Grid>
                                                            <Grid.Resources>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Margin" Value="0,0,0,3"/>
                                                                </Style>
                                                            </Grid.Resources>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="140"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                            </Grid.RowDefinitions>
                                                            <TextBlock Grid.Column="0" Grid.Row="0" Text="Ring SN"/>
                                                            <TextBlock Grid.Column="0" Grid.Row="1" Text="Dispense volume ID"/>
                                                            <TextBlock Grid.Column="0" Grid.Row="2" Text="Dispense volume OD"/>
                                                            <TextBlock Grid.Column="0" Grid.Row="3" Text="Flow autocalibration"/>

                                                            <TextBlock Grid.Column="1" Grid.Row="0" Text="-" x:Name="Disp_Res_SNTxb"/>
                                                            <TextBlock Grid.Column="1" Grid.Row="1" Text="-" x:Name="Disp_Res_VolIDTxb"/>
                                                            <TextBlock Grid.Column="1" Grid.Row="2" Text="-" x:Name="Disp_Res_VolODTxb"/>
                                                            <TextBlock Grid.Column="1" Grid.Row="3" Text="-" x:Name="Disp_Res_FlowCalTxb"/>
                                                        </Grid>
                                                    </GroupBox>
                                                    <StackPanel Grid.Row="3" Orientation="Vertical">
                                                        <Button x:Name="Disp_Res_FinishBtn" Click="Disp_Res_FinishBtn_Click" Content="Finish" Style="{DynamicResource BlueButton}">
                                                            <!--<StackPanel Orientation="Horizontal">
                                                                <Image Source="/Resources/icons/tools.ico"/>
                                                                <Label Content="Configure Next Process"/>
                                                            </StackPanel>-->
                                                        </Button>
                                                    </StackPanel>

                                                </Grid>

                                            </Grid>
                                        </ScrollViewer>
                                    </TabItem>

                                </TabControl>

                            </Grid>
                        </Grid>
                    </ScrollViewer>
                </TabItem>
                <TabItem x:Name="AdvTab" Header="Advanced" Tag="Resources/icons/tune.ico" Style="{StaticResource MainTab}" Height="40">

                    <Grid Margin="4">
                        <Border x:Name="Adv_PWEntryBdr" Background="WhiteSmoke" Visibility="Collapsed">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="300"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <GroupBox Header="Password" Grid.Row="1" Grid.Column="1">
                                    <StackPanel Orientation="Vertical">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <PasswordBox x:Name="Adv_PWBox" 
                                                     Grid.Column="0"
                                                     Padding="6"
                                                     KeyDown="Adv_PWBox_KeyDown"/>
                                            <Button x:Name="Adv_PWSubmitBtn"
                                                Grid.Column="1"
                                                Padding="12,0"
                                                Content="Submit" 
                                                Style="{StaticResource SmallButton}" 
                                                Click="Adv_PWSubmitBtn_Click"/>
                                        </Grid>
                                        <TextBlock x:Name="Adv_PWMessageTxb" Text="Incorrect password" Margin="3" Visibility="Collapsed"/>
                                    </StackPanel>
                                </GroupBox>
                            </Grid>
                        </Border>
                        <TabControl x:Name="Adv_AllControlsTcl" Visibility="Visible" TabStripPlacement="Top" Margin="4">
                            <TabItem Header="Cell Control Panel">

                                <Grid>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="180"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Vertical">

                                            <GroupBox Header="Connection">
                                                <TextBlock
                                                    x:Name="Adv_Cell_ConnectedStatusTxt"
                                                    Text="Not connected" 
                                                    Foreground="Red"
                                                    TextWrapping="Wrap"
                                                    TextAlignment="Left"
                                                    HorizontalAlignment="Left" 
                                                    VerticalAlignment="Center"/>
                                            </GroupBox>

                                            <GroupBox Header="Auto Status">
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock
                                                        x:Name="Adv_Cell_AutoStatusTxt"
                                                        Text="No status" 
                                                        Foreground="Red"
                                                        TextWrapping="Wrap"
                                                        TextAlignment="Left"
                                                        HorizontalAlignment="Left" 
                                                        VerticalAlignment="Center"/>
                                                    <StackPanel Orientation="Horizontal">
                                                        <!--<Button x:Name="Adv_Cell_AutoStartBtn" Content="Start" Click="Adv_Cell_AutoStartBtn_Click"/>-->
                                                        <!--<Button x:Name="Adv_Cell_AutoStopBtn" Content="Stop" Click="Adv_Cell_AutoStopBtn_Click"/>-->
                                                    </StackPanel>
                                                </StackPanel>
                                            </GroupBox>
                                        </StackPanel>

                                        <GroupBox Grid.Column="1" Header="Motor Settings" >
                                            <StackPanel Orientation="Vertical">
                                                <ComboBox x:Name="Adv_Cell_MotorSizeCmb" VerticalAlignment="Top" SelectionChanged="Adv_Cell_MotorSizeCmb_OnSelectionChanged">
                                                    <ComboBoxItem Content="DDM 57" />
                                                    <ComboBoxItem Content="DDM 95" />
                                                    <ComboBoxItem Content="DDM 116" IsSelected="True"/>
                                                    <ComboBoxItem Content="DDM 170" />
                                                    <ComboBoxItem Content="DDM 170 Tall" />
                                                </ComboBox>
                                                <Button x:Name="Adv_Cell_OpenSettingsBtn" Content="Open file" Click="Adv_Cell_OpenSettingsBtn_Click" Style="{StaticResource SmallButton}" />
                                                <Button x:Name="Adv_Cell_ReloadSettingsBtn" Content="Reload" Click="Adv_Cell_ReloadSettingsBtn_Click" Style="{StaticResource SmallButton}" />
                                            </StackPanel>
                                        </GroupBox>

                                        <GroupBox Header="Version Information" Grid.Column="2">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition/>
                                                </Grid.ColumnDefinitions>

                                                <Label Grid.Row="0" Grid.Column="0" Content="Manager UI:"/>
                                                <Label Grid.Row="1" Grid.Column="0" Content="Controller TCS:"/>
                                                <Label Grid.Row="2" Grid.Column="0" Content="Controller config:"/>

                                                <Label Grid.Row="0" Grid.Column="1" x:Name="Adv_Cell_GUIVersionLbl" Content="-"/>
                                                <Label Grid.Row="1" Grid.Column="1" x:Name="Adv_Cell_TCSVersionLbl" Content="-"/>
                                                <Label Grid.Row="2" Grid.Column="1" x:Name="Adv_Cell_PACVersionLbl" Content="-"/>
                                            </Grid>
                                        </GroupBox>
                                        <GroupBox Header="Emergency" Grid.Column="3">
                                            <StackPanel Orientation="Vertical" Grid.Column="1">
                                                <Button x:Name="Adv_Cell_EStopBtn" Content="E STOP" Style="{DynamicResource RedButton}" Padding="10" Click="Adv_Cell_EStopBtn_Click"/>
                                                <Button x:Name="Adv_Cell_ECloseValvesBtn" Content="CLOSE VALVES" Style="{DynamicResource RedButton}" Padding="10" Click="Adv_Cell_ECloseValvesBtn_Click"/>
                                            </StackPanel>
                                        </GroupBox>
                                    </Grid>

                                    <Grid Grid.Row="1" x:Name="robotBtnContainer">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="320"/>
                                        </Grid.ColumnDefinitions>

                                        <GroupBox Header="Robot Thread Commands" Grid.Column="0">


                                            <TabControl>

                                                <TabItem Header="Robot">

                                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                        <StackPanel Orientation="Vertical">

                                                            <GroupBox Header="Pendant">
                                                                <Grid>

                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="0"/>
                                                                        <ColumnDefinition Width="100"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                    </Grid.ColumnDefinitions>

                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition/>
                                                                        <RowDefinition/>
                                                                        <RowDefinition/>
                                                                        <RowDefinition/>
                                                                    </Grid.RowDefinitions>

                                                                    <Button Grid.Row="0" Grid.Column="1" x:Name="Adv_Cell_EnableBtn" Content="Enable power" Style="{DynamicResource SmallGreenButton}" Click="Adv_Cell_EnableBtn_Click" />
                                                                    <Label  Grid.Row="0" Grid.Column="2" x:Name="Adv_Cell_EnableOutLbl" Content="-"/>

                                                                    <Button Grid.Row="1" Grid.Column="1" x:Name="Adv_Cell_HomeBtn" Content="Home" Style="{DynamicResource SmallGreenButton}" Click="Adv_Cell_HomeBtn_Click"/>
                                                                    <Label  Grid.Row="1" Grid.Column="2" x:Name="Adv_Cell_HomeOutLbl" Content="-"/>

                                                                </Grid>
                                                            </GroupBox>

                                                            <GroupBox Header="Movement">
                                                                <Grid>

                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="120"/>
                                                                        <ColumnDefinition Width="140"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                    </Grid.ColumnDefinitions>

                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition/>
                                                                        <RowDefinition/>
                                                                        <RowDefinition/>
                                                                        <RowDefinition/>
                                                                        <RowDefinition/>
                                                                        <RowDefinition/>
                                                                        <RowDefinition/>
                                                                        <RowDefinition/>
                                                                    </Grid.RowDefinitions>

                                                                    <Label  Grid.Row="0" Grid.Column="0" x:Name="Adv_Cell_MoveLoadInLbl" Content="-"/>
                                                                    <Button Grid.Row="0" Grid.Column="1" x:Name="Adv_Cell_MoveLoadBtn" Content="Move, load" Style="{DynamicResource SmallGreenButton}" Click="Adv_Cell_MoveLoadBtn_Click"/>
                                                                    <Label  Grid.Row="0" Grid.Column="2" x:Name="Adv_Cell_MoveLoadOutLbl" Content="-"/>

                                                                    <Label  Grid.Row="1" Grid.Column="0" x:Name="Adv_Cell_MoveCamTopInLbl" Content="-"/>
                                                                    <Button Grid.Row="1" Grid.Column="1" x:Name="Adv_Cell_MoveCamTopBtn" Content="Move, camera top" Style="{DynamicResource SmallGreenButton}" Click="Adv_Cell_MoveCamTopBtn_Click"/>
                                                                    <Label  Grid.Row="1" Grid.Column="2" x:Name="Adv_Cell_MoveCamTopOutLbl" Content="-"/>

                                                                    <Label  Grid.Row="2" Grid.Column="0" x:Name="Adv_Cell_MoveCamSideInLbl" Content="-"/>
                                                                    <Button Grid.Row="2" Grid.Column="1" x:Name="Adv_Cell_MoveCamSideBtn" Content="Move, camera side" Style="{DynamicResource SmallGreenButton}" Click="Adv_Cell_MoveCamSideBtn_Click" IsEnabled="False"/>
                                                                    <Label  Grid.Row="2" Grid.Column="2" x:Name="Adv_Cell_MoveCamSideOutLbl" Content="-"/>

                                                                    <Label  Grid.Row="3" Grid.Column="0" x:Name="Adv_Cell_MoveLaserRingInLbl" Content="-"/>
                                                                    <Button Grid.Row="3" Grid.Column="1" x:Name="Adv_Cell_MoveLaserRingBtn" Content="Move, laser ring" Style="{DynamicResource SmallGreenButton}" Click="Adv_Cell_MoveLaserRingBtn_Click"/>
                                                                    <Label  Grid.Row="3" Grid.Column="2" x:Name="Adv_Cell_MoveLaserRingOutLbl" Content="-"/>

                                                                    <Label  Grid.Row="4" Grid.Column="0" x:Name="Adv_Cell_MoveLaserMagInLbl" Content="-"/>
                                                                    <Button Grid.Row="4" Grid.Column="1" x:Name="Adv_Cell_MoveLaserMagBtn" Content="Move, laser mag/conc" Style="{DynamicResource SmallGreenButton}" Click="Adv_Cell_MoveLaserMagBtn_Click"/>
                                                                    <Label  Grid.Row="4" Grid.Column="2" x:Name="Adv_Cell_MoveLaserMagOutLbl" Content="-"/>

                                                                    <Label  Grid.Row="5" Grid.Column="0" x:Name="Adv_Cell_MoveDispIDInLbl" Content="-"/>
                                                                    <Button Grid.Row="5" Grid.Column="1" x:Name="Adv_Cell_MoveDispIDBtn" Content="Move, dispense ID" Style="{DynamicResource SmallGreenButton}" Click="Adv_Cell_MoveDispIDBtn_Click"/>
                                                                    <Label  Grid.Row="5" Grid.Column="2" x:Name="Adv_Cell_MoveDispIDOutLbl" Content="-"/>

                                                                    <Label  Grid.Row="6" Grid.Column="0" x:Name="Adv_Cell_MoveDispODInLbl" Content="-"/>
                                                                    <Button Grid.Row="6" Grid.Column="1" x:Name="Adv_Cell_MoveDispODBtn" Content="Move, dispense OD" Style="{DynamicResource SmallGreenButton}" Click="Adv_Cell_MoveDispODBtn_Click"/>
                                                                    <Label  Grid.Row="6" Grid.Column="2" x:Name="Adv_Cell_MoveDispODOutLbl" Content="-"/>

                                                                    <Label  Grid.Row="7" Grid.Column="0" x:Name="Adv_Cell_MoveSpinInLbl" Content="-"/>
                                                                    <Button Grid.Row="7" Grid.Column="1" x:Name="Adv_Cell_MoveSpinBtn" Content="Move, spin in place" Style="{DynamicResource SmallGreenButton}" Click="Adv_Cell_MoveSpinBtn_Click"/>
                                                                    <Label  Grid.Row="7" Grid.Column="2" x:Name="Adv_Cell_MoveSpinOutLbl" Content="-"/>

                                                                </Grid>
                                                            </GroupBox>






                                                        </StackPanel>
                                                    </ScrollViewer>

                                                </TabItem>

                                                <TabItem Header="Height Sensor">


                                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                        <StackPanel Orientation="Vertical">

                                                            <GroupBox Header="Measurements">
                                                                <Grid>

                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="130"/>
                                                                        <ColumnDefinition Width="150"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                    </Grid.ColumnDefinitions>

                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition/>
                                                                        <RowDefinition/>
                                                                        <RowDefinition/>
                                                                        <RowDefinition/>
                                                                        <RowDefinition/>
                                                                    </Grid.RowDefinitions>

                                                                    <Label  Grid.Row="0" Grid.Column="0" x:Name="Adv_Cell_MeasureRingInLbl" Content="-"/>
                                                                    <Button Grid.Row="0" Grid.Column="1" x:Name="Adv_Cell_MeasureRingBtn" Content="Measure ring" Style="{DynamicResource SmallBlackButton}" Click="Adv_Cell_MeasureRingBtn_Click"/>
                                                                    <Label  Grid.Row="0" Grid.Column="2" x:Name="Adv_Cell_MeasureRingOutLbl" Content="-"/>

                                                                    <Label  Grid.Row="1" Grid.Column="0" x:Name="Adv_Cell_MeasureMagInLbl" Content="-"/>
                                                                    <Button Grid.Row="1" Grid.Column="1" x:Name="Adv_Cell_MeasureMagBtn" Content="Measure mag and conc" Style="{DynamicResource SmallBlackButton}" Click="Adv_Cell_MeasureMagBtn_Click"/>
                                                                    <Label  Grid.Row="1" Grid.Column="2" x:Name="Adv_Cell_MeasureMagOutLbl" Content="-"/>

                                                                    <Button Grid.Row="2" Grid.Column="1" x:Name="Adv_Cell_ShowRingBtn" Content="Show ring data" Style="{DynamicResource SmallButton}" Click="Adv_Cell_ShowRingBtn_Click"/>

                                                                    <Button Grid.Row="3" Grid.Column="1" x:Name="Adv_Cell_ShowMagBtn" Content="Show mag and conc data" Style="{DynamicResource SmallButton}" Click="Adv_Cell_ShowMagBtn_Click"/>


                                                                </Grid>
                                                            </GroupBox>



                                                        </StackPanel>
                                                    </ScrollViewer>

                                                </TabItem>

                                                <TabItem Header="Dispense Setup">

                                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                        <StackPanel Orientation="Vertical">

                                                            <GroupBox Header="Pressure Regulators">
                                                                <Grid>

                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="80"/>
                                                                        <ColumnDefinition Width="110"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                    </Grid.ColumnDefinitions>

                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition/>
                                                                        <RowDefinition/>
                                                                        <RowDefinition/>
                                                                        <RowDefinition/>
                                                                        <RowDefinition/>
                                                                        <RowDefinition/>
