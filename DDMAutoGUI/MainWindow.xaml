<Window x:Class="DDMAutoGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DDMAutoGUI"
        mc:Ignorable="d"
        Title="DDM Automation Cell Manager" Height="500" Width="800" ResizeMode="CanMinimize" Icon="/images/logos/b.ico" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <LinearGradientBrush.RelativeTransform>
                <TransformGroup>
                    <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                    <SkewTransform CenterX="0.5" CenterY="0.5"/>
                    <RotateTransform Angle="-45" CenterX="0.5" CenterY="0.5"/>
                    <TranslateTransform/>
                </TransformGroup>
            </LinearGradientBrush.RelativeTransform>
            <GradientStop Color="White" Offset="0."/>
            <GradientStop Color="#FFB2CAE8" Offset="1.2"/>
        </LinearGradientBrush>
    </Window.Background>



    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--<Menu VerticalAlignment="Top" Padding="3" Background="WhiteSmoke" Visibility="Collapsed">
            <MenuItem Header="Tools">
                <MenuItem x:Name="connectionMenuItem" Header="Connection Manager" Click="ConnectBtn_Click"/>
                <MenuItem x:Name="debugMenuItem" Header="Debug Window" Click="DebugBtn_Click" IsEnabled="False"/>
                <MenuItem x:Name="logMenuItem" Header="Log Window" IsEnabled="False"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About" Click="AboutMenuItem_Click"/>
            </MenuItem>
        </Menu>-->


        <Border BorderBrush="#DDD" BorderThickness="0,1,0,1" Visibility="Visible" Background="WhiteSmoke" Panel.ZIndex="10" Padding="3">
            <Grid Grid.Row="0">
                <StackPanel Grid.Row="0" Orientation="Horizontal">

                    <Button x:Name="connectToolbarBtn" 
                            Style="{StaticResource ToolbarButton}"
                            Click="ConnectBtn_Click"
                            ToolTip="Show connection manager">
                        <StackPanel>
                            <Image Source="/images/icons/down-left-and-up-right-to-center-solid.png"/>
                            <Label Content="Controller Connection"/>
                        </StackPanel>
                    </Button>


                    <Button x:Name="debugToolbarBtn" 
                            Style="{DynamicResource ToolbarButton}" 
                            Click="DebugBtn_Click"  
                            ToolTip="Show debug window">
                        <StackPanel>
                            <Image Source="/images/icons/screwdriver-wrench-solid.png"/>
                            <Label Content="Controller Tools"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="CameraBtn" 
                            Style="{DynamicResource ToolbarButton}" 
                            Click="CameraBtn_Click"  
                            ToolTip="Show camera info window">
                        <StackPanel>
                            <Image Source="/images/icons/camera-solid.png"/>
                            <Label Content="Camera Tools"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="SettingsBtn" 
                            Style="{DynamicResource ToolbarButton}" 
                            Click="SettingsBtn_Click"  
                            ToolTip="Show camera info window">
                        <StackPanel>
                            <!--<Image Source="/images/icons/camera-solid.png"/>-->
                            <Label Content="Settings"/>
                        </StackPanel>
                    </Button>
                    <Border BorderBrush="#CCC" BorderThickness="1,0,0,0" Margin="4,6"/>
                    <Button x:Name="aboutToolbarBtn" 
                            Style="{DynamicResource ToolbarButton}" 
                            Click="AboutMenuItem_Click" 
                            ToolTip="Show version information">
                        <StackPanel>
                            <Image Source="/images/icons/circle-info-solid.png"/>
                            <Label Content="About"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>



        <Grid Grid.Row="1" Panel.ZIndex="0">


            <Image Source="/images/splash/cad-splash-5.png" Margin="322,-42,0,-53" Stretch="UniformToFill" />
            <Image Source="/images/logos/brooks-logo.png" Margin="26,55,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="131"/>
            <Label Content="DDM Automation Cell Manager" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,83,0,0" FontSize="22" Foreground="#FF0072BC"/>
            <Label Content="Intended for Gen 1 Phase 1a (ENG TEST ONLY)" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,113,0,0" Foreground="#FF0072BC"/>
            <Label Content="UI Version:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,129,0,0" Foreground="#FF0072BC"/>
            <Label x:Name="splashVersionLabel" Content="(version info)" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,129,0,0" Foreground="#FF0072BC"/>

            <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="22,170,0,0">
                <Grid VerticalAlignment="Top" Width="200">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBox Grid.Row="0" Grid.Column="0" x:Name="splashIPTextBox" Text="192.168.0.1" Margin="0,4,4,4" Padding="3"/>
                    <Button Grid.Row="0" Grid.Column="1" x:Name="splashConnectBtn" Content="Connect" Margin="4,4,0,4" Width="80" Click="splashConnectBtn_Click"/>
                    <Label Grid.Row="1" Grid.ColumnSpan="2" x:Name="splashErrorLabel" Content="Connection error." Padding="0" FontSize="10" Margin="0,0,0,4" Visibility="Collapsed"/>

                    <Button Grid.Row="2" 
                            Grid.ColumnSpan="2" 
                            x:Name="dispenseBtn" 
                            Click="DispenseBtn_Click" 
                            Height="60" 
                            Visibility="Collapsed"
                            Style="{DynamicResource HeroButton}" 
                            
                            Margin="0,4,0,4">
                        <StackPanel>
                            <Image Grid.Column="0" Source="/images/icons/cad-disp-valve-2-white.png"/>
                            <Label Grid.Column="1" Content="Begin Dispense" />
                        </StackPanel>
                    </Button>
                    
                    <StackPanel Grid.Row ="3" Grid.ColumnSpan="2" Orientation="Vertical">
                        <Button x:Name="connectBtn" Content="Connection Manager" Click="ConnectBtn_Click" Margin="0,4,0,4" Visibility="Collapsed" />
                        <Button x:Name="debugBtn" Content="Debug Window" Click="DebugBtn_Click" Margin="0,4,0,4" Visibility="Collapsed" />
                    </StackPanel>
                </Grid>
            </Grid>




        </Grid>

        
