<Window x:Class="DDMAutoGUI.windows.CameraWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DDMAutoGUI.windows"
        mc:Ignorable="d"
        Title="Camera Window" Height="600" Width="800" ResizeMode="CanResizeWithGrip" Background="WhiteSmoke" Icon="/resources/icons/camera.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <Grid Grid.Row="0" Background="White" Margin="6,6,6,0">
            <Border BorderBrush="#DDD" BorderThickness="1">
                <Image x:Name="acquiredImageDisplay" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>
            <Label x:Name="displayLabel" Content="No image" Foreground="#FFD4D4D4" HorizontalAlignment="Center" VerticalAlignment="Center" Panel.ZIndex="-1"/>
        </Grid>



        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <GroupBox Header="Acquisition" Grid.Column="0">
                <Button x:Name="acquireBtn" Content="Connect and acquire" Click="acquireBtn_Click" Style="{DynamicResource PrimaryBlackButton}" Padding="10,5,10,5"/>
            </GroupBox>
            <GroupBox Header="Other" Grid.Column="1">
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="openFolderBtn" Content="Open folder" Click="openFolderBtn_Click"/>
                </StackPanel>
            </GroupBox>
        </Grid>

        <!--<StackPanel Grid.Row="2">
            <Label x:Name="label1" Content="Ready" Margin="8,0,0,0"/>
        </StackPanel>-->

    </Grid>
</Window>
