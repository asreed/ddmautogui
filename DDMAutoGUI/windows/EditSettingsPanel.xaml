<UserControl x:Class="DDMAutoGUI.windows.EditSettingsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DDMAutoGUI.windows"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0">
            <TabItem Header="View">
                <TreeView x:Name="SettingsTreeView" Margin="10">
                    <TreeViewItem x:Name="SettingsTreeViewRoot" IsExpanded="True">
                        <!-- -->
                    </TreeViewItem>
                </TreeView>
            </TabItem>
            <TabItem Header="Edit">
                <Grid>
                    <TextBox 
                        Name="settingsTxb" 
                        Text="--" 
                        TextWrapping="Wrap"
                        Padding="6,5" 
                        Margin="10"
                        VerticalScrollBarVisibility="Auto" 
                        VerticalContentAlignment="Top"
                        FontFamily="Consolas"
                        FontSize="10"/>
                </Grid>
            </TabItem>
        </TabControl>


        <Grid Grid.Row="1">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="LoadBtn" Content="Load from flash" Click="LoadBtn_Click"/>
                <Button x:Name="SaveBtn" Content="Save to flash" Style="{DynamicResource PrimaryBlackButton}" Click="SaveBtn_Click"/>
            </StackPanel>
        </Grid>

    </Grid>
</UserControl>
