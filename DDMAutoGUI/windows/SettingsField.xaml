<UserControl x:Class="DDMAutoGUI.windows.SettingsField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DDMAutoGUI.windows"
             mc:Ignorable="d" 
             d:DesignHeight="50"
             d:DesignWidth="200">

    <UserControl.Resources>
        <local:UnderscoreEscapeConverter x:Key="UnderscoreEscapeConverter" />
    </UserControl.Resources>

    <Grid Margin="3,3,3,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label 
            x:Name="FieldLabel" 
            VerticalAlignment="Center" 
            Margin="0,0,6,0"
            Content="{Binding LabelText, Converter={StaticResource UnderscoreEscapeConverter}}" 
            />
        <TextBox 
            x:Name="FieldTextBox" 
            Grid.Column="1" 
            VerticalAlignment="Center" 
            Margin="0"
            Text="{Binding ValueText, Converter={StaticResource UnderscoreEscapeConverter}}" 
            />

    </Grid>
</UserControl>
