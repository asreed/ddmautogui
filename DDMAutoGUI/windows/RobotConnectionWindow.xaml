<Window x:Class="DDMAutoGUI.windows.RobotConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DDMAutoGUI.windows"
        mc:Ignorable="d"
        Title="Controller Connection Manager" Height="519" Width="421" Background="WhiteSmoke" ResizeMode="NoResize" Icon="/images/icons/down-left-and-up-right-to-center-solid.png" WindowStartupLocation="CenterScreen">

    <Grid Margin="0,0,0,3">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>




        <GroupBox Grid.Row="0" Height="Auto" Header="TCS Connection">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBox Grid.Column="0" Grid.Row="0" x:Name="ipTextBox" TextWrapping="Wrap" Text="192.168.0.1" Margin="4"/>
                <Button Grid.Column="1" Grid.Row="0" x:Name="connectBtn" Content="Connect to TCS" Click="connectBtn_ClickAsync"/>
                <Button Grid.Column="2" Grid.Row="0" x:Name="disconnectBtn" Content="Disconnect from TCS" Click="disconnectBtn_ClickAsync"/>
                <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3">
                    <Label Content="Controller software version:" Padding="5,2"/>
                    <Label x:Name="versionLabel" Content="(no version info)" Padding="5,2"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="1" Height="Auto" Header="Troubleshoot Connection" Foreground="#CCC" Visibility="Collapsed">
            <StackPanel Orientation="Vertical">
                <Button x:Name="loadTCSBtn" Content="Attempt to load " Click="loadTCSBtn_Click" HorizontalAlignment="Left"/>
                <Label x:Name="loadTCSLabel" Content="(result)" Padding="2" VerticalAlignment="Center"/>
            </StackPanel>
        </GroupBox>

        <Grid Grid.Row="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <GroupBox Grid.Column="0" Header="Status Connection">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!--
                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <Button x:Name="startAutoBtn" Content="Start Auto" Click="startAutoBtn_Click" IsEnabled="False"/>
                        <Button x:Name="stopAutoBtn" Content="Stop Auto" Click="stopAutoBtn_Click" IsEnabled="False"/>
                    </StackPanel>
                    -->
                    <TextBox Grid.Row="1" x:Name="statusLogTextBox" Margin="4" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" IsReadOnly="True" FontSize="10" FontFamily="Consolas" VerticalContentAlignment="Top"/>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" x:Name="statusMessageTextBox" Margin="4" Text="" KeyDown="statusMessageTextBox_KeyDown"/>
                        <Button Grid.Column="1" x:Name="statusSendBtn" Content="Send" Click="statusSendBtn_ClickAsync"/>
                    </Grid>
                </Grid>
            </GroupBox>

            <GroupBox Grid.Column="1" Header="Robot Connection">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBox Grid.Row="0" x:Name="robotLogTextBox" Margin="4" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" IsReadOnly="True" FontSize="10" FontFamily="Consolas" VerticalContentAlignment="Top"/>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" x:Name="robotMessageTextBox" Margin="4" Text="" KeyDown="robotMessageTextBox_KeyDown"/>
                        <Button Grid.Column="1" x:Name="robotSendBtn" Content="Send" Click="robotSendBtn_ClickAsync"/>
                    </Grid>

                </Grid>
            </GroupBox>
        </Grid>



    </Grid>
</Window>
