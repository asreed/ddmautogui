<Window x:Class="DDMAutoGUI.windows.DebugWindow2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DDMAutoGUI.windows"
        mc:Ignorable="d"
        
        Closing="Window_Closing"
        Title="Controller Tools" 
        Height="658" 
        Width="1000" 
        Background="WhiteSmoke" 
        Icon="/images/icons/screwdriver-wrench-solid.png" 
        WindowStartupLocation="CenterScreen" 
        ResizeMode="CanResizeWithGrip">


    
    <Grid Margin="0,0,0,20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <GroupBox Grid.Column="0" Header="Connection">
                <TextBlock
                    x:Name="connectedBox"
                    Text="Not connected" 
                    Foreground="Red"
                    Width="100"
                    TextWrapping="Wrap"
                    TextAlignment="Center"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"/>
            </GroupBox>
            
            <GroupBox Grid.Column="1" Header="Auto Status">
                <TextBlock
                    x:Name="statusBox"
                    Text="No status" 
                    Foreground="Red"
                    Width="100"
                    TextWrapping="Wrap"
                    TextAlignment="Center"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"/>
            </GroupBox>
            
            <GroupBox Header="Version Information" Grid.Column="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="Manager UI version:" Padding="1" Margin="0,0,8,0"/>
                    <Label Grid.Row="1" Grid.Column="0" Content="Controller TCS version:" Padding="1" Margin="0,0,8,0"/>
                    <Label Grid.Row="2" Grid.Column="0" Content="Controller config version:" Padding="1" Margin="0,0,8,0"/>

                    <Label Grid.Row="0" Grid.Column="1" x:Name="versionManagerLabel" Content="-" Padding="1"/>
                    <Label Grid.Row="1" Grid.Column="1" x:Name="versionTCSLabel" Content="-" Padding="1"/>
                    <Label Grid.Row="2" Grid.Column="1" x:Name="versionConfigLabel" Content="-" Padding="1"/>
                </Grid>
            </GroupBox>
            <GroupBox Header="Emergency" Grid.Column="3">
                <StackPanel Orientation="Horizontal" Grid.Column="1">
                    <Button x:Name="eCloseValvesBtn" Content="CLOSE VALVES" Style="{DynamicResource PrimaryRedButton}" Click="closeValvesBtn_Click"/>
                    <Button x:Name="eStopBtn" Content="E STOP"  Style="{DynamicResource PrimaryRedButton}" Click="eStopBtn_Click"/>
                </StackPanel>
            </GroupBox>
        </Grid>

        <Grid Grid.Row="1" x:Name="robotBtnContainer">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="360"/>
            </Grid.ColumnDefinitions>

            <GroupBox Header="Robot Thread Commands" Grid.Column="0">


                <TabControl>
                    
                    <TabItem Header="Robot">

                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Orientation="Vertical">

                                <GroupBox Header="Pendant">
                                    <Grid>
                                        
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="160"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>

                                        <Button  Grid.Row="0" Grid.Column="1" x:Name="enablePowerBtn" Content="Enable power" Style="{DynamicResource PrimaryGreenButton}" Padding="0,3,0,3" Click="enablePowerBtn_Click"/>
                                        <Label   Grid.Row="0" Grid.Column="2" x:Name="enablePowerOutput" Content="-" Padding="3" Margin="4" VerticalContentAlignment="Center"/>

                                        <Button  Grid.Row="1" Grid.Column="1" x:Name="homeBtn" Content="Home" Style="{DynamicResource PrimaryGreenButton}" Padding="0,3,0,3" Click="homeBtn_Click"/>
                                        <Label   Grid.Row="1" Grid.Column="2" x:Name="homeOutput" Content="-" Padding="3" Margin="4" VerticalContentAlignment="Center"/>


                                    </Grid>
                                </GroupBox>

                                <GroupBox Header="Movement">
                                    <Grid>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="160"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>

                                        <TextBox Grid.Row="3" Grid.Column="0" x:Name="moveLinearLoadInput" Text="20" Padding="3" Margin="4"/>
                                        <Button  Grid.Row="3" Grid.Column="1" x:Name="moveLinearLoadBtn" Content="Move rail to load" Style="{DynamicResource PrimaryGreenButton}" Padding="0,3,0,3" Click="moveLinearLoadBtn_Click"/>
                                        <Label   Grid.Row="3" Grid.Column="2" x:Name="moveLinearLoadOutput" Content="-" VerticalContentAlignment="Center"/>
                                        
                                        <TextBox Grid.Row="4" Grid.Column="0" x:Name="moveLinearCamInput" Text="20" Padding="3" Margin="4"/>
                                        <Button  Grid.Row="4" Grid.Column="1" x:Name="moveLinearCamBtn" Content="Move rail to camera" Style="{DynamicResource PrimaryGreenButton}" Padding="0,3,0,3" Click="moveLinearCamBtn_Click"/>
                                        <Label   Grid.Row="4" Grid.Column="2" x:Name="moveLinearCamOutput" Content="-"  VerticalContentAlignment="Center"/>

                                        <TextBox Grid.Row="5" Grid.Column="0" x:Name="moveLinearDisp1Input" Text="20" Padding="3" Margin="4"/>
                                        <Button  Grid.Row="5" Grid.Column="1" x:Name="moveLinearDisp1Btn" Content="Move rail to dispense ID" Style="{DynamicResource PrimaryGreenButton}" Padding="0,3,0,3" Click="moveLinearDisp1Btn_Click"/>
                                        <Label   Grid.Row="5" Grid.Column="2" x:Name="moveLinearDisp1Output" Content="-"  VerticalContentAlignment="Center"/>

                                        <TextBox Grid.Row="6" Grid.Column="0" x:Name="moveLinearDisp2Input" Text="20" Padding="3" Margin="4"/>
                                        <Button  Grid.Row="6" Grid.Column="1" x:Name="moveLinearDisp2Btn" Content="Move rail to dispense OD" Style="{DynamicResource PrimaryGreenButton}" Padding="0,3,0,3" Click="moveLinearDisp2Btn_Click"/>
                                        <Label   Grid.Row="6" Grid.Column="2" x:Name="moveLinearDisp2Output" Content="-"  VerticalContentAlignment="Center"/>

                                        <TextBox Grid.Row="7" Grid.Column="0" x:Name="spinTimeInput" Text="4.0 100" Padding="3" Margin="4"/>
                                        <Button  Grid.Row="7" Grid.Column="1" x:Name="spinTimeBtn" Content="Spin by time" Style="{DynamicResource PrimaryGreenButton}" Padding="0,3,0,3" Click="spinTimeBtn_Click"/>
                                        <Label   Grid.Row="7" Grid.Column="2" x:Name="spinTimeOutput" Content="-" VerticalContentAlignment="Center"/>
                                        
                                    </Grid>
                                </GroupBox>

                                

                                


                            </StackPanel>
                        </ScrollViewer>

                    </TabItem>

                    <TabItem Header="Displacement Sensor">


                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Orientation="Vertical">

                                <GroupBox Header="Connection">
                                    <Grid>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="180"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>

                                        <Button  Grid.Row="0" Grid.Column="1" x:Name="connectLaserBtn" Content="Connect to laser" Style="{DynamicResource PrimaryBlackButton}" Padding="0,3,0,3" Click="connectLaserBtn_Click"/>
                                        <Label   Grid.Row="0" Grid.Column="2" x:Name="connectLaserOutput" Content="-" Padding="3" Margin="4" VerticalContentAlignment="Center"/>

                                        <Button  Grid.Row="1" Grid.Column="1" x:Name="disconnectLaserBtn" Content="Disconnect from laser" Style="{DynamicResource PrimaryBlackButton}" Padding="0,3,0,3" Click="disconnectLaserBtn_Click"/>
                                        <Label   Grid.Row="1" Grid.Column="2" x:Name="disconnectLaserOutput" Content="-" Padding="3" Margin="4" VerticalContentAlignment="Center"/>

                                        <Button  Grid.Row="2" Grid.Column="1" x:Name="getLaserSingleBtn" Content="Get single measurement" Style="{DynamicResource PrimaryBlackButton}" Padding="0,3,0,3" Click="getLaserSingleBtn_Click"/>
                                        <Label   Grid.Row="2" Grid.Column="2" x:Name="getLaserSingleOutput" Content="-" Padding="3" Margin="4" VerticalContentAlignment="Center"/>

                                        <!--<TextBox Grid.Row="0" Grid.Column="0" x:Name="getLaserInput" Text="30.0" Padding="3" Margin="4"/>-->
                                        <!--<Button  Grid.Row="0" Grid.Column="1" x:Name="getLaserBtn" Content="Get laser measurement" Style="{DynamicResource PrimaryBlackButton}" Padding="0,3,0,3" Click="setPressure1Btn_Click"/>-->
                                        <!--<Label   Grid.Row="0" Grid.Column="2" x:Name="getLaserOutput" Content="-" Padding="3" Margin="4" VerticalContentAlignment="Center"/>-->

                                    </Grid>
                                </GroupBox>

                                <GroupBox Header="Measurements">
                                    <Grid>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="180"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>

                                        <!--<TextBox Grid.Row="0" Grid.Column="0" x:Name="getLaserInput" Text="30.0" Padding="3" Margin="4"/>-->
                                        <Button  Grid.Row="0" Grid.Column="1" x:Name="getLaserRingBtn" Content="Measure ring" Style="{DynamicResource PrimaryBlackButton}" Padding="0,3,0,3" Click="getLaserRingBtn_Click"/>
                                        <Label   Grid.Row="0" Grid.Column="2" x:Name="getLaserRingOutput" Content="-" Padding="3" Margin="4" VerticalContentAlignment="Center"/>

                                        <Button  Grid.Row="1" Grid.Column="1" x:Name="n4" Content="Show ring data" Padding="0,3,0,3" Click="showRingBtn_Click"/>

                                        <Button  Grid.Row="2" Grid.Column="1" x:Name="getLaserMagBtn" Content="Measure mag and conc" Style="{DynamicResource PrimaryBlackButton}" Padding="0,3,0,3" Click="getLaserMagBtn_Click"/>
                                        <Label   Grid.Row="2" Grid.Column="2" x:Name="getLaserMagOutput" Content="-" Padding="3" Margin="4" VerticalContentAlignment="Center"/>

                                        <Button  Grid.Row="3" Grid.Column="1" x:Name="n44" Content="Show mag and conc data" Padding="0,3,0,3" Click="showMagBtn_Click"/>

                                        
                                        <TextBox Grid.Row="4" Grid.Column="0" x:Name="getLaserCustomInput" Text="6 232.99" Padding="3" Margin="4"/>
                                        <Button  Grid.Row="4" Grid.Column="1" x:Name="getLaserCustomBtn" Content="Measure custom" Style="{DynamicResource PrimaryBlackButton}" Padding="0,3,0,3" Click="getLaserCustomBtn_Click"/>
                                        <Label   Grid.Row="4" Grid.Column="2" x:Name="getLaserCustomOutput" Content="-" Padding="3" Margin="4" VerticalContentAlignment="Center"/>

                                        <Button  Grid.Row="5" Grid.Column="1" x:Name="ddf" Content="Show custom data" Padding="0,3,0,3" Click="showCustomBtn_Click"/>

                                        <!--<TextBox Grid.Row="0" Grid.Column="0" x:Name="getLaserInput" Text="30.0" Padding="3" Margin="4"/>-->
                                        <!--<Button  Grid.Row="0" Grid.Column="1" x:Name="getLaserBtn" Content="Get laser measurement" Style="{DynamicResource PrimaryBlackButton}" Padding="0,3,0,3" Click="setPressure1Btn_Click"/>-->
                                        <!--<Label   Grid.Row="0" Grid.Column="2" x:Name="getLaserOutput" Content="-" Padding="3" Margin="4" VerticalContentAlignment="Center"/>-->

                                    </Grid>
                                </GroupBox>



                            </StackPanel>
                        </ScrollViewer>

                    </TabItem>

                    <TabItem Header="Shot Calibration">

                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Orientation="Vertical">


                                <GroupBox Header="Pressure Regulators">
                                    <Grid>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>

                                        <TextBox Grid.Row="0" Grid.Column="0" x:Name="setPressure1Input" Text="30.0" Padding="3" Margin="4"/>
                                        <Button  Grid.Row="0" Grid.Column="1" x:Name="setPressure1Btn" Content="Set pressure 1" Style="{DynamicResource PrimaryOrangeButton}" Padding="0,3,0,3" Click="setPressure1Btn_Click"/>
                                        <Label   Grid.Row="0" Grid.Column="2" x:Name="setPressure1Output" Content="-" Padding="3" Margin="4" VerticalContentAlignment="Center"/>

                                        <TextBox Grid.Row="1" Grid.Column="0" x:Name="setPressure2Input" Text="30.0" Padding="3" Margin="4"/>
                                        <Button  Grid.Row="1" Grid.Column="1" x:Name="setPressure2Btn" Content="Set pressure 2" Style="{DynamicResource PrimaryOrangeButton}" Padding="0,3,0,3" Click="setPressure2Btn_Click"/>
                                        <Label   Grid.Row="1" Grid.Column="2" x:Name="setPressure2Output" Content="-" Padding="3" Margin="4" VerticalContentAlignment="Center"/>

                                    </Grid>
                                </GroupBox>

                                <GroupBox Header="Shot Volume Measurment">
                                    <Grid>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="180"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>

                                        <StackPanel 
                                            Orientation="Vertical"
                                            Grid.Row="0" 
                                            Grid.Column="0" 
                                            Grid.ColumnSpan="3"
                                            Margin="0,0,0,8">
                                            
                                            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Text="This will open a valve and trigger the flow sensor to measure the dispensed volume." TextWrapping="Wrap"/>
                                        </StackPanel>
                                        
                                        <TextBox Grid.Row="1" Grid.Column="0" x:Name="shot1Input"  Text="0.5" Padding="3" Margin="4"/>
                                        <Button  Grid.Row="1" Grid.Column="1" x:Name="shot1Btn" Content="Measure shot from valve 1" Style="{DynamicResource PrimaryBlackButton}" Padding="0,3,0,3" Click="shot1Btn_Click"/>
                                        <Label   Grid.Row="1" Grid.Column="2" x:Name="shot1Output" Content="-" Padding="3" Margin="4" VerticalContentAlignment="Center"/>

                                        <TextBox Grid.Row="2" Grid.Column="0" x:Name="shot2Input"  Text="0.5" Padding="3" Margin="4"/>
                                        <Button  Grid.Row="2" Grid.Column="1" x:Name="shot2Btn" Content="Measure shot from valve 2" Style="{DynamicResource PrimaryBlackButton}" Padding="0,3,0,3" Click="shot2Btn_Click"/>
                                        <Label   Grid.Row="2" Grid.Column="2" x:Name="shot2Output" Content="-" Padding="3" Margin="4" VerticalContentAlignment="Center"/>
                                    </Grid>


                                </GroupBox>

                                <GroupBox Header="Valves">
                                    <Grid>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Text="These actions only open or close valves, they do NOT take any flow measurement. For shot size measurement, see the 'Shot Calibration' tab." TextWrapping="Wrap"/>

                                        <TextBox Grid.Row="1" Grid.Column="0" x:Name="openValve1Input"  Text="0.5" Padding="3" Margin="4"/>
                                        <Button  Grid.Row="1" Grid.Column="1" x:Name="openValve1Btn" Content="Open valve 1" Style="{DynamicResource PrimaryBlueButton}" Padding="0,3,0,3" Click="openValve1Btn_Click"/>
                                        <Label   Grid.Row="1" Grid.Column="2" x:Name="openValve1Output" Content="-" Padding="3" Margin="4" VerticalContentAlignment="Center"/>

                                        <TextBox Grid.Row="2" Grid.Column="0" x:Name="openValve2Input" Text="0.5" Padding="3" Margin="4"/>
                                        <Button  Grid.Row="2" Grid.Column="1" x:Name="openValve2Btn" Content="Open valve 2" Style="{DynamicResource PrimaryBlueButton}" Padding="0,3,0,3" Click="openValve2Btn_Click"/>
                                        <Label   Grid.Row="2" Grid.Column="2" x:Name="openValve2Output" Content="-" Padding="3" Margin="4" VerticalContentAlignment="Center"/>

                                        <!--<TextBox Grid.Row="2" Grid.Column="0" Text="Input" Padding="3" Margin="4"/>-->
                                        <!--<Button  Grid.Row="3" Grid.Column="1" x:Name="closeValvesBtn" Content="Close all valves" Style="{DynamicResource PrimaryBlueButton}" Padding="0,3,0,3" Click="closeValvesBtn_Click" />
                                        <Label   Grid.Row="3" Grid.Column="2" x:Name="closeValvesOutput" Content="-" Padding="3" Margin="4" VerticalContentAlignment="Center"/>-->

                                    </Grid>
                                </GroupBox>

                                <GroupBox Header="Flow Sensors">
                                    <Grid>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>

                                        <!--<TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Text="..." TextWrapping="Wrap"/>-->

                                        <Button  Grid.Row="1" Grid.Column="1" x:Name="setZeroBothBtn" Content="Set Zero Shift" Style="{DynamicResource PrimaryBlackButton}" Padding="0,3,0,3" Click="setZeroBothBtn_Click"/>
                                        <Label   Grid.Row="1" Grid.Column="2" x:Name="setZeroBothOutput" Content="-" Padding="3" Margin="4" VerticalContentAlignment="Center"/>

                                        <Button  Grid.Row="2" Grid.Column="1" x:Name="startMeasure1Btn" Content="Start measure 1" Style="{DynamicResource PrimaryGreenButton}" Padding="0,3,0,3" Click="startMeasure1Btn_Click"/>
                                        <Label   Grid.Row="2" Grid.Column="2" x:Name="startMeasure1Output" Content="-" Padding="3" Margin="4" VerticalContentAlignment="Center"/>

                                        <Button  Grid.Row="3" Grid.Column="1" x:Name="stopMeasure1Btn" Content="Stop measure 1" Style="{DynamicResource PrimaryRedButton}" Padding="0,3,0,3" Click="stopMeasure1Btn_Click"/>
                                        <Label   Grid.Row="3" Grid.Column="2" x:Name="stopMeasure1Output" Content="-" Padding="3" Margin="4" VerticalContentAlignment="Center"/>

                                        <Button  Grid.Row="4" Grid.Column="1" x:Name="startMeasure2Btn" Content="Start measure 2" Style="{DynamicResource PrimaryGreenButton}" Padding="0,3,0,3" Click="startMeasure2Btn_Click"/>
                                        <Label   Grid.Row="4" Grid.Column="2" x:Name="startMeasure2Output" Content="-" Padding="3" Margin="4" VerticalContentAlignment="Center"/>

                                        <Button  Grid.Row="5" Grid.Column="1" x:Name="stopMeasure2Btn" Content="Stop measure 2" Style="{DynamicResource PrimaryRedButton}" Padding="0,3,0,3" Click="stopMeasure2Btn_Click"/>
                                        <Label   Grid.Row="5" Grid.Column="2" x:Name="stopMeasure2Output" Content="-" Padding="3" Margin="4" VerticalContentAlignment="Center"/>


                                    </Grid>
                                </GroupBox>

                            </StackPanel>
                        </ScrollViewer>

                    </TabItem>

                    <TabItem Header="Dispense">

                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Orientation="Vertical">

                                <GroupBox Header="Dispense Process">
                                    <Grid>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="160"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>

                                        <!--<TextBox Grid.Row="0" Grid.Column="0" Text="Input" Padding="3" Margin="4"/>--><!--
                                        <Button  Grid.Row="0" Grid.Column="1" Content="Move rail to load" Style="{DynamicResource PrimaryGreenButton}" Padding="0,3,0,3"/>
                                        <Label   Grid.Row="0" Grid.Column="2" Content="-" Padding="3" Margin="4" VerticalContentAlignment="Center"/>

                                        --><!--<TextBox Grid.Row="1" Grid.Column="0" Text="Input" Padding="3" Margin="4"/>--><!--
                                        <Button  Grid.Row="1" Grid.Column="1" Content="Move rail to dispense" Style="{DynamicResource PrimaryGreenButton}" Padding="0,3,0,3"/>
                                        <Label   Grid.Row="1" Grid.Column="2" Content="-" Padding="3" Margin="4" VerticalContentAlignment="Center"/>-->


                                        <StackPanel 
                                            Orientation="Vertical"
                                            Grid.Row="0" 
                                            Grid.Column="0" 
                                            Grid.ColumnSpan="3"
                                            Margin="0,0,0,8">
                                            
                                            <TextBlock TextWrapping="Wrap" Text="This will do the following:"/>
                                            <!--<TextBlock TextWrapping="Wrap" Text="1. Move under camera and take a photo"/>-->
                                            <TextBlock TextWrapping="Wrap" Text="1. Move under valve 1 and dispense"/>
                                            <TextBlock TextWrapping="Wrap" Text="2. Move under valve 2 and dispense"/>
                                            <!--<TextBlock TextWrapping="Wrap" Text="4. Move under camera and take another photo"/>-->
                                            <TextBlock TextWrapping="Wrap" Text="3. Move to unload position"/>

                                        </StackPanel>

                                        <TextBox Grid.Row="2" Grid.Column="0" x:Name="dispShotsInput" Text="5 45 45 8" Padding="3" Margin="4"/>
                                        <Button  Grid.Row="2" Grid.Column="1" x:Name="dispShotsBtn" Content="Dispense Shots to Ring" Style="{DynamicResource PrimaryBlackButton}" Padding="0,3,0,3" Click="dispShotsBtn_Click"/>
                                        <Label   Grid.Row="2" Grid.Column="2" x:Name="dispShotsOutput" Content="-" Padding="3" Margin="4" VerticalContentAlignment="Center"/>

                                        <!--<TextBox Grid.Row="3" Grid.Column="0" Text="Input" Padding="3" Margin="4"/>
                                        <Button  Grid.Row="3" Grid.Column="1" Content="Spin by time" Style="{DynamicResource PrimaryGreenButton}" Padding="0,3,0,3"/>
                                        <Label   Grid.Row="3" Grid.Column="2" Content="-" Padding="3" Margin="4" VerticalContentAlignment="Center"/>-->
                                        
                                    </Grid>


                                </GroupBox>
                            </StackPanel>
                        </ScrollViewer>

                    </TabItem>
                    
                </TabControl>

            </GroupBox>

            <GroupBox Header="System State" Grid.Column="1">

                <TabControl>
                    <TabItem Header="Overview">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">

                            <Grid>

                                <Grid.Resources>
                                    <Style TargetType="Label">
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="Margin" Value="2"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                    </Style>

                                    <Style TargetType="Label" x:Key="readout">
                                        <Setter Property="Padding" Value="5,2,5,2"/>
                                        <Setter Property="Margin" Value="2"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Background" Value="WhiteSmoke"/>
                                    </Style>
                                </Grid.Resources>




                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>


                                <GroupBox Header="Robot"  Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <Label Grid.Row="0" Grid.Column="0" Content="Power enabled:"/>
                                        <Label Grid.Row="0" Grid.Column="1" x:Name="roPowerEnabled" Content="-" Style="{DynamicResource readout}"/>
