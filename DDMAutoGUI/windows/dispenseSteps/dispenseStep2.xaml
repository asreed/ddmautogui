<UserControl x:Class="DDMAutoGUI.dispenseSteps.dispenseStep2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DDMAutoGUI.dispenseSteps"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800" Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <GroupBox Header="Reference Images"
                  Grid.Column="0" 
                  Margin="0"
                  Padding="6"
                  Style="{DynamicResource stepBox}">

            <Border
                BorderBrush="#FF525252"
                BorderThickness="1">
                <Image 
                    x:Name="acqImage"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Top" 
                    Width="450"/>
            </Border>
        </GroupBox>

        <GroupBox Header="Step Instructions"
                  Grid.Column="1"
                  Margin="3,0,0,0"
                  Style="{DynamicResource stepBox}">

            <Grid Margin="6,12,30,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Grid.Column="0"
                       Grid.Row="0"
                       Margin="0"
                       Padding="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Content="2.1"/>

                <StackPanel Grid.Column="1"
                            Grid.Row="0"
                            Orientation="Vertical">


                    <TextBlock TextWrapping="Wrap"
                               Foreground="Black"
                               Margin="0,0,0,8"
                               Text="Verify that the level of Permabond 801 is above the fill line in the reservoir."/>

                    <Button x:Name="moveBtn" Content="Move to imaging position" Click="moveBtn_Click" Style="{DynamicResource PrimaryBlackButton}"/>
                    <Button x:Name="acqBtn" Content="Connect and acquire image" Click="acqBtn_Click" Style="{DynamicResource PrimaryBlackButton}"/>


                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
