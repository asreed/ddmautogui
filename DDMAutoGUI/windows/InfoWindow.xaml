<Window x:Class="DDMAutoGUI.windows.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DDMAutoGUI.windows"
        mc:Ignorable="d"
        Title="Version Information" 
        Height="200" 
        Width="400"
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterOwner"
        Background="White"
        WindowStyle="SingleBorderWindow">

    <Border>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <!--<Label Content="i" HorizontalAlignment="Center" VerticalAlignment="Center"/>-->
            <Image Source="/images/icons/b.ico" Width="40" VerticalAlignment="Center" Margin="0,6,0,0"/>
 
            <Grid Grid.Column="1" VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" 
                       Content="DDM Automation Cell Manager" 
                       Padding="0" 
                       Foreground="{StaticResource BrooksBlue}" 
                       FontSize="16" FontWeight="Bold"/>

                <TextBlock Grid.Row="1"
                           Name="infoTextBox" 
                           Text="(application info)" 
                           Padding="0" 
                           TextWrapping="Wrap" 
                           Foreground="{StaticResource BrooksBlue}" 
                           FontSize="10" VerticalAlignment="Top"/>

            </Grid>
        </Grid>

        <StackPanel Grid.Row="1" Background="Transparent">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"  Margin="4,0,4,4">
                <Button x:Name="okBtn" Content="Close" Padding="10,5" Click="okBtn_Click" Margin="4,0,4,4"/>
            </StackPanel>
        </StackPanel>

    </Grid>
    </Border>
</Window>
