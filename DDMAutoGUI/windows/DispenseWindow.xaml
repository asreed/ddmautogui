<Window xmlns:dispenseSteps="clr-namespace:DDMAutoGUI.dispenseSteps"  x:Class="DDMAutoGUI.DispenseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DDMAutoGUI"
        mc:Ignorable="d"
        Closing="DispenseWindow_WindowClosing"
        Title="Process Window" Height="600" Width="900" Background="WhiteSmoke" ResizeMode="NoResize" Icon="/images/icons/b.ico" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Image Source="/images/icons/cad-disp-valve-2.png" Height="30" Margin="6,6,6,6"/>
            <Label Content="Dispense Cyanoacrylate Process Guide" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="6,3,6,8" FontSize="18" Foreground="Black" Margin="0,3,0,0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Right" Margin="0,0,6,0">
            <Button Name="showLog" 
                    Click="showLog_Click" 
                    Style="{DynamicResource ToolbarButton}" 
                    ToolTip="Show Log" 
                    VerticalAlignment="Center">
                <StackPanel>
                    <Image Source="/images/icons/book-solid.png"/>
                    <Label Content="Log"/>
                </StackPanel>
            </Button>
            <Button Name="abortToolbarBtn" 
                    Click="abortBtn_Click" 
                    Style="{DynamicResource ToolbarButton}" 
                    ToolTip="Abort Process" 
                    Width="Auto" 
                    VerticalAlignment="Center">
                <StackPanel>
                    <Image Source="/images/icons/ban-solid.png"/>
                    <Label Content="Abort Process"/>
                </StackPanel>
            </Button>
        </StackPanel>
        <!--
        <Button Name="showLog" Content="Show process log" Click="showLog_Click" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="4" FontSize="10"/>
        -->
        <TabControl x:Name="dispTabControl" Grid.Row="1" Margin="6,6,6,0" SelectionChanged="dispTabControl_SelectionChanged">

            <TabItem Header="1: Enter SN">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid x:Name="tabContainer1">
                        <!-- step added dynamically -->
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="2: Pre Image">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid x:Name="tabContainer2">
                        <!-- step added dynamically -->
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="3. Measure Heights">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid x:Name="tabContainer3">
                        <!-- step added dynamically -->
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="4. Dispense Adhesive and Post Image">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid x:Name="tabContainer4">
                        <!-- step added dynamically -->
                    </Grid>
                </ScrollViewer>
            </TabItem>

        </TabControl>
        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <Button x:Name="prevBtn" Content="Previous Step" Click="prevBtn_Click" Style="{DynamicResource PrimaryBlueButton}" Margin="6,6,0,6"/>
            <Button x:Name="nextBtn" Content="Next Step" Click="nextBtn_Click" Style="{DynamicResource PrimaryBlueButton}" Margin="6"/>
        </StackPanel>
        <Button x:Name="abortBtn" Content="Abort Process" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Bottom" Style="{DynamicResource PrimaryRedButton}" Click="abortBtn_Click" Visibility="Collapsed"/>


    </Grid>
</Window>
