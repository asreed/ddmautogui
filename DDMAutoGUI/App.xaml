            <Setter Property="Foreground" Value="White"/>
            
            <Setter Property="Template">

                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="mainBorder"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Padding="{TemplateBinding Padding}"
                                    Margin="0"
                                    CornerRadius="3">
                                <ContentPresenter x:Name="content"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Width="Auto"
                                                  Height="Auto"/>
                            </Border>
                            <Border x:Name="shadowBorder" 
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Background="Transparent" 
                                    BorderBrush="Black"
                                    BorderThickness="0,0,1,1"
                                    CornerRadius="3"
                                    Opacity="0.4"
                                    Margin="1"/>
                            <Border x:Name="shadowBorderFill" 
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Background="Transparent" 
                                    BorderBrush="Black"
                                    BorderThickness="0,0,3,3"
                                    CornerRadius="5"
                                    Opacity="0.2"
                                    Margin="3,3,1,1"/>
                            <Border x:Name="highlightBorder" 
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Background="Transparent" 
                                    BorderBrush="{StaticResource AngleWhiteGradient}"
                                    BorderThickness="1,1,0,0"
                                    CornerRadius="3"
                                    Opacity="0.6"
                                    Margin="2"/>

                        </Grid>

                        <ControlTemplate.Resources>
                            <Style TargetType="StackPanel">
                                <Setter Property="Orientation" Value="Horizontal"/>
                            </Style>
                            <Style TargetType="Image">
                                <Setter Property="Width" Value="14"/>
                                <Setter Property="Height" Value="14"/>
                            </Style>
                            <Style TargetType="Label">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontSize" Value="12"/>
                                <Setter Property="Margin" Value="4,0,2,0"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="0"/>
                            </Style>
                        </ControlTemplate.Resources>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">

                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style>
        
        



        <!-- Toolbar button -->

        <Style TargetType="Button" x:Key="ToolbarButton">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="3"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Height" Value="Auto"/>
            <Setter Property="Opacity" Value="0.8"/>

            <Setter Property="Template">

                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="mainBorder"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Padding="{TemplateBinding Padding}"
                                    Margin="0"
                                    CornerRadius="3">
                                <ContentPresenter x:Name="content"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Width="Auto"
                                    Height="Auto"/>
                            </Border>

                        </Grid>

                        <ControlTemplate.Resources>
                            <Style TargetType="StackPanel">
                                <Setter Property="Orientation" Value="Horizontal"/>
                            </Style>
                            <Style TargetType="Image">
                                <Setter Property="Width" Value="14"/>
                                <Setter Property="Height" Value="14"/>
                            </Style>
                            <Style TargetType="Label">
                                <Setter Property="FontSize" Value="11"/>
                                <Setter Property="Margin" Value="4,0,2,0"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="0"/>
                            </Style>
                        </ControlTemplate.Resources>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="mainBorder" Property="Background" Value="{StaticResource DefaultBtnLight}"/>
                                <Setter TargetName="mainBorder" Property="BorderBrush" Value="{StaticResource BrooksBlue}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="mainBorder" Property="Background" Value="{StaticResource DefaultBtnDark}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="mainBorder" Property="Background" Value="Transparent"/>
                                <Setter TargetName="mainBorder" Property="BorderBrush" Value="Transparent"/>
                                <Setter TargetName="content" Property="Opacity" Value="0.15"/>
                                <Setter Property="Foreground" Value="{StaticResource DisabledGreyText}"/>

                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style>


        <!-- Process Step tab control -->

        <Style TargetType="GroupBox" x:Key="stepBox" BasedOn="{StaticResource {x:Type GroupBox}}">

            <!--
            <Setter Property="Foreground" Value="{StaticResource GroupBoxHeaderText}"/>
            <Setter Property="BorderBrush" Value="{StaticResource GroupBoxOutline}"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Padding" Value="6"/>
            -->

        </Style>
        
        <Style TargetType="TextBox" x:Key="stepTextBox" BasedOn="{StaticResource {x:Type TextBox}}">
            
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Padding" Value="12,8"/>

        </Style>


        <Style TargetType="CheckBox" x:Key="stepCheckBox">

            <Setter Property="Background" Value="{StaticResource TextBoxBlueLight}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBoxBlueDark}"/>
            <Setter Property="BorderBrush" Value="{StaticResource TextBoxBlueDark}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="12"/>
            <Setter Property="Padding" Value="6"/>

        </Style>

        <Style TargetType="{x:Type TabControl}" x:Key="wizardTabControl">
            <Setter Property="BorderBrush" Value="{StaticResource GroupBoxOutline}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <UniformGrid x:Name="HeaderPanel" 
                                         Grid.Row="0"
                                         Rows="1"
                                         Margin="-3,0,-3,0"
                                         IsItemsHost="True"/>
                            <!-- (or use TabPanel for non-justified tabs) -->

                            <Border Grid.Row="1"
                                    Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    CornerRadius="3"
                                    Padding="3">
                                <ContentPresenter x:Name="PART_SelectedContentHost" ContentSource="SelectedContent"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type TabItem}" x:Key="wizardTabItem">

            <Setter Property="Width" Value="Auto"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Border Name="Border"
                                BorderThickness="0"
                                BorderBrush="#FFACACAC"
                                CornerRadius="3"
                                Margin="3,0,3,6">
                            <ContentPresenter x:Name="ContentSite"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    ContentSource="Header"
                                    Margin="6,2"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#333" />
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="#EEE" />
                                <Setter Property="Foreground" Value="{StaticResource GroupBoxHeaderText}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

