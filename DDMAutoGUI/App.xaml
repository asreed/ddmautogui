        <SolidColorBrush x:Key="BrooksBlue" Color="#FF0072BC"/>

        <LinearGradientBrush x:Key="BrooksBlueGradient" EndPoint="0.5,1" StartPoint="0.5,0">
            <LinearGradientBrush.RelativeTransform>
                <TransformGroup>
                    <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                    <SkewTransform CenterX="0.5" CenterY="0.5"/>
                    <RotateTransform Angle="0" CenterX="0.5" CenterY="0.5"/>
                    <TranslateTransform/>
                </TransformGroup>
            </LinearGradientBrush.RelativeTransform>
            <GradientStop Color="#FF0072BC" Offset="0"/>
            <GradientStop Color="#FF0061A0" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="GreenGradient" EndPoint="0.5,1" StartPoint="0.5,0">
            <LinearGradientBrush.RelativeTransform>
                <TransformGroup>
                    <ScaleTransform CenterY="0.5" CenterX="0.5"/>
