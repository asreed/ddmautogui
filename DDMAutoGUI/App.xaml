                                    Width="Auto"
                                    Height="Auto"
                                    />
                            </Border>

                            <Border x:Name="highlightBorder" 
                                Grid.Row="0"
                                Grid.Column="0"
                                Background="Transparent" 
                                BorderBrush="{StaticResource AngleWhiteGradient}"
                                BorderThickness="1,1,0,0"
                                CornerRadius="6"
                                Opacity="1"
                                Margin="2"/>
                            <Border x:Name="shadowBorder" 
                                Grid.Row="0"
                                Grid.Column="0"
                                Background="Transparent" 
                                BorderBrush="Black"
                                BorderThickness="0,0,2,2"
                                CornerRadius="8"
                                Opacity="0.4"
                                Margin="0"/>
                            <Border x:Name="shadowBorderFill" 
                                Grid.Row="0"
                                Grid.Column="0"
                                Background="Transparent" 
                                BorderBrush="Black"
                                BorderThickness="0,0,4,4"
                                CornerRadius="8"
                                Opacity="0.1"
                                Margin="0,0,0,0"/>

                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="mainBorder" Property="Background" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="mainBorder" Property="Background" Value="#ccc"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#999"/>
                                <Setter TargetName="mainBorder" Property="Background" Value="WhiteSmoke"/>
                                <Setter TargetName="mainBorder" Property="BorderBrush" Value="#aaa"/>
                                <Setter TargetName="highlightBorder" Property="Opacity" Value="0"/>
                                <Setter TargetName="shadowBorder" Property="BorderBrush" Value="White"/>
                                <Setter TargetName="shadowBorder" Property="Opacity" Value="0.1"/>
                                <Setter TargetName="shadowBorderFill" Property="Opacity" Value="0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style>

