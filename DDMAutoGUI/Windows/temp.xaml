<Window x:Class="DDMAutoGUI.Windows.temp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DDMAutoGUI.Windows"
        mc:Ignorable="d"
        Title="temp" Height="750" Width="1024" ResizeMode="CanResizeWithGrip" Background="WhiteSmoke">


    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
    </Window.Resources>
    
    
    
    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TabControl TabStripPlacement="Left" Margin="3">
                <TabItem Style="{StaticResource MainTab}" Header="Connect" Tag="/Resources/icons/lan.ico">

                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Row="1" Grid.Column="1" Width="400">
                                <StackPanel Orientation="Vertical">
                                    <GroupBox Header="Controller IP">
                                        <TextBox Text="192.168.0.1"/>
                                    </GroupBox>
                                    <GroupBox Header="Status">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="20"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.Resources>
                                                <Style TargetType="Label">
                                                    <Setter Property="Margin" Value="0"/>
                                                    <Setter Property="Padding" Value="2"/>
                                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                                </Style>
                                            </Grid.Resources>
                                            <Label Grid.Row="0" Grid.Column="0" Content="x" HorizontalAlignment="Center"/>
                                            <Label Grid.Row="0" Grid.Column="1" Content="Controller TCS" Margin="6,0,0,0"/>
                                            <Label Grid.Row="1" Grid.Column="0" Content="x" HorizontalAlignment="Center"/>
                                            <Label Grid.Row="1" Grid.Column="1" Content="Controller Settings" Margin="6,0,0,0"/>
                                            <Label Grid.Row="2" Grid.Column="0" Content="x" HorizontalAlignment="Center"/>
                                            <Label Grid.Row="2" Grid.Column="1" Content="Top Camera" Margin="6,0,0,0"/>
                                            <Label Grid.Row="3" Grid.Column="0" Content="x" HorizontalAlignment="Center"/>
                                            <Label Grid.Row="3" Grid.Column="1" Content="Side Camera" Margin="6,0,0,0"/>
                                        </Grid>
                                    </GroupBox>
                                    <Button Style="{DynamicResource BlueButton}">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="/Resources/icons/plug.ico"/>
                                            <Label Content="Connect"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </ScrollViewer>
                </TabItem>
                <TabItem Style="{StaticResource MainTab}" Header="Dispense" Tag="/Resources/icons/warning.ico">

                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="100"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Row="1" Grid.Column="1" Width="400">
                                <TabControl>
                                    <TabItem Header="1. Configure">
                                        <StackPanel Orientation="Vertical">
                                            <GroupBox Header="Motor Size">
                                                <StackPanel Orientation="Vertical">
                                                    <RadioButton Content="DDM 57" GroupName="motorSizeRdg" IsChecked="True"/>
                                                    <RadioButton Content="DDM 95" GroupName="motorSizeRdg"/>
                                                    <RadioButton Content="DDM 116" GroupName="motorSizeRdg"/>
                                                    <RadioButton Content="DDM 170" GroupName="motorSizeRdg"/>
                                                    <RadioButton Content="DDM 170 Tall" GroupName="motorSizeRdg"/>
                                                    
                                                </StackPanel>
                                            </GroupBox>
                                            <Button Style="{StaticResource BlueButton}">
                                                <StackPanel Orientation="Horizontal">
                                                    <Image Source="/Resources/icons/warning.ico"/>
                                                    <Label Content="Begin Dispense Process"/>
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>
                                    </TabItem>
                                    <TabItem Header="2. Monitor">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <GroupBox Header="Process Log" Height="350">
                                                <TextBox Style="{StaticResource MonoTextBox}" Text="Test test test"/>
                                            </GroupBox>
                                            <ProgressBar Grid.Row="1" Height="20" Value="40" Margin="3" Foreground="Black"/>
                                        </Grid>
                                    </TabItem>
                                    <TabItem Header="3. Review">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <GroupBox Grid.Row="0" Header="Result">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition/>
                                                    </Grid.ColumnDefinitions>
                                                    <Border Grid.Column="0"
                                                            Background="#FF12AB12" 
                                                            BorderBrush="#FF0C730C"
                                                            Width="100"
                                                            Height="60"
                                                            Margin="0,0,10,0"
                                                            BorderThickness="2">
                                                        <Label Content="Pass" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <TextBlock Grid.Column="1"
                                                               TextWrapping="Wrap"
                                                               Foreground="Black"
                                                               VerticalAlignment="Center"
                                                               Text="Process completed with no error"/>
                                                </Grid>
                                            </GroupBox>
                                            <GroupBox Grid.Row="2" Header="Result Details" Height="200">
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock Text="Top picture acquired: "/>
                                                    <TextBlock Text="Side picture acquired: "/>
                                                    <TextBlock Text="Ring SN: "/>
                                                    <TextBlock Text="ID volume: "/>
                                                    <TextBlock Text="OD volume: "/>

                                                </StackPanel>
                                            </GroupBox>
                                            <StackPanel Grid.Row="3" Orientation="Vertical">
                                                <Button Style="{DynamicResource BlueButton}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <Image Source="/Resources/icons/tools.ico"/>
                                                        <Label Content="Configure Next Process"/>
                                                    </StackPanel>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </TabItem>
                                </TabControl>
                            </Grid>
                        </Grid>
                    </ScrollViewer>
                </TabItem>
                <TabItem Style="{StaticResource MainTab}" Header="Advanced" Tag="/Resources/icons/tune.ico">



                </TabItem>
            </TabControl>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.Resources>
                <Style TargetType="Label">
                    <Setter Property="Padding" Value="4,3"/>
                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <StackPanel Orientation="Horizontal" FlowDirection="LeftToRight">
                    <Label Content="Status:"/>
                    <Label Content="Not connected"/>
                    <Label/>
                    <Label Content="Robot thread:"/>
                    <Label Content="Idle"/>
                    <Label/>
                    <Label Content="Status thread:"/>
                    <Label Content="Idle"/>
                </StackPanel>

            </Grid>
            <Grid Grid.Column="1">
                <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" Margin="0,0,20,0">
                    <Label Content="No warnings"/>

                </StackPanel>
            </Grid>

        </Grid>

    </Grid>
</Window>
