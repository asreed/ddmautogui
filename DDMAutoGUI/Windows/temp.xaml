<Window x:Class="DDMAutoGUI.Windows.temp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DDMAutoGUI.Windows"
        mc:Ignorable="d"
        Title="temp" Height="750" Width="1024" ResizeMode="CanResizeWithGrip" Background="WhiteSmoke">


    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
    </Window.Resources>
    
    
    
    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TabControl TabStripPlacement="Left" Margin="3">
                <TabItem Style="{StaticResource MainTab}" Header="Connect" Tag="/Resources/icons/lan.ico">

                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Row="1" Grid.Column="1" Width="400">
                                <StackPanel Orientation="Vertical">
                                    <GroupBox Header="Controller IP">
                                        <TextBox Text="192.168.0.1"/>
                                    </GroupBox>
                                    <GroupBox Header="Status">
                                        <StackPanel Orientation="Vertical">
                                            <Label Content="Controller TCS"/>
                                            <Label Content="Controller Settings"/>
                                            <Label Content="Top Camera"/>
                                            <Label Content="Side Camera"/>
                                        </StackPanel>
                                    </GroupBox>
                                    <Button Content="Connect" Style="{DynamicResource BlueButton}"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </ScrollViewer>
                </TabItem>
                <TabItem Style="{StaticResource MainTab}" Header="Dispense" Tag="/Resources/icons/warning.ico">

                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Row="1" Grid.Column="1" Width="400" Height="500">
                                <TabControl>
                                    <TabItem Header="1. Configure">
                                        <StackPanel Orientation="Vertical">
                                            <GroupBox Header="Motor Size">
                                                <StackPanel Orientation="Vertical">
                                                    <RadioButton Content="DDM 57" GroupName="motorSizeRdg" IsChecked="True"/>
                                                    <RadioButton Content="DDM 95" GroupName="motorSizeRdg"/>
                                                    <RadioButton Content="DDM 116" GroupName="motorSizeRdg"/>
                                                    <RadioButton Content="DDM 170" GroupName="motorSizeRdg"/>
                                                    <RadioButton Content="DDM 170 Tall" GroupName="motorSizeRdg"/>
                                                    
                                                </StackPanel>
                                            </GroupBox>
                                            <Button Content="Begin Dispense" Style="{StaticResource BlueButton}"/>
                                        </StackPanel>
                                    </TabItem>
                                    <TabItem Header="2. Monitor">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <GroupBox Header="Process Log">
                                                <TextBox/>
                                            </GroupBox>
                                            <ProgressBar Grid.Row="1" Height="20" Value="40" Foreground="{DynamicResource BrooksBlueGradient}"/>
                                        </Grid>
                                    </TabItem>
                                    <TabItem Header="3. Review">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <GroupBox Grid.Row="0" Header="Result">
                                                <Border Background="#FF12AB12" Padding="15"  BorderBrush="#FF0C730C" BorderThickness="2">
                                                    <Label Content="Pass" Foreground="White" HorizontalAlignment="Center"/>
                                                </Border>
                                            </GroupBox>
                                            <GroupBox Grid.Row="1" Header="Result Message">
                                                <Label Content="Process completed successfully with no errors"/>
                                            </GroupBox>
                                            <GroupBox Grid.Row="2" Header="Result Details">
                                                <StackPanel Orientation="Vertical">
                                                    <Label Content="Top picture acquired: "/>
                                                    <Label Content="Side picture acquired: "/>
                                                    <Label Content="Ring SN: "/>
                                                    <Label Content="Volume ID: "/>
                                                    <Label Content="Volume OD: "/>

                                                </StackPanel>
                                            </GroupBox>
                                            <StackPanel Grid.Row="3" Orientation="Vertical">
                                                <Button Content="Open Results Folder"/>
                                                <Button Content="Back to Configure" Style="{DynamicResource PrimaryBlueButton}"/>
                                            </StackPanel>
                                        </Grid>
                                    </TabItem>
                                </TabControl>
                            </Grid>
                        </Grid>
                    </ScrollViewer>
                </TabItem>
                <TabItem Style="{StaticResource MainTab}" Header="Advanced" Tag="/Resources/icons/tune.ico">



                </TabItem>
            </TabControl>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.Resources>
                <Style TargetType="Label">
                    <Setter Property="Padding" Value="4,3"/>
                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <StackPanel Orientation="Horizontal" FlowDirection="LeftToRight">
                    <Label Content="Status:"/>
                    <Label Content="Not connected"/>
                    <Label/>
                    <Label Content="Robot thread:"/>
                    <Label Content="Idle"/>
                    <Label/>
                    <Label Content="Status thread:"/>
                    <Label Content="Idle"/>
                </StackPanel>

            </Grid>
            <Grid Grid.Column="1">
                <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" Margin="0,0,20,0">
                    <Label Content="No warnings"/>

                </StackPanel>
            </Grid>

        </Grid>

    </Grid>
</Window>
